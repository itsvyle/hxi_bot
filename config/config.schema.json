{
    "type": "object",
    "properties": {
        "enabled": {
            "type": "boolean"
        },
        "botToken": {
            "type": "string"
        },
        "channelThreadsWatcherServices": {
            "type": "array",
            "maxItems": 1,
            "items": {
                "type": "object",
