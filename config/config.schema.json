{
    "type": "object",
    "properties": {
        "enabled": {
            "type": "boolean"
        },
        "botToken": {
            "type": "string"
        },
        "channelThreadsWatcherServices": {
            "type": "array",
            "maxItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "channelId": {
                        "type": "string"
                    },
                    "sendRenameButton": {
                        "type": "boolean",
                        "default": true
                    }
                },
                "required": [
                    "channelId"
                ]
            }
        },
        "aiChatServices": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "openAIAPiKey": {
                        "type": "string"
                    },
                    "openAIModelName": {
                        "type": "string"
                    },
                    "botName": {
                        "type": "string"
                    },
                    "prompt": {
                        "type": "string"
                    },
                    "maxContextSize": {
                        "type": "integer",
                        "default": 5
                    },
                    "maxTokens": {
                        "type": "integer",
                        "default": 150
                    },
                    "temperature": {
                        "type": "number",
                        "default": 0.8
                    },
                    "killers": {
                        "type": "array",
                        "description": "List of user ids that can !kill the bot",
                        "items": {
                            "type": "string"
                        },
                        "default": []
                    },
                    "activateAutoConvos": {
                        "type": "boolean",
                        "description": "If true, the bot will have the command to start an autoconversation between bots; only give it to a single bot per server or it'll break :)",
                        "default": false
                    },
                    "autoConvosMessageDelay": {
                        "type": "integer",
                        "description": "Delay in milliseconds between each message sent in autoconvos",
                        "default": 2500
                    },
                    "guildId": {
                        "type": "string",
                        "description": "The guild id where the bot is running; useful for emojis only right now"
                    },
                    "rpmLimit": {
                        "type": "integer",
                        "description": "Max requests per minute for the bot"
                    }
                },
                "required": [
                    "openAIAPiKey",
                    "openAIModelName",
                    "botName",
                    "prompt"
                ]
            }
        },
        "gayGPTServices": {
            "type": "array",
            "maxItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "botToken": {
                        "type": "string"
                    },
                    "possibleAnswers": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "default": [
                            "gay"
                        ]
                    },
                    "guildId": {
                        "type": "string",
                        "description": "The guild id where the bot is running; useful for bot roles"
                    },
                    "reactTo": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "properties": {
                                "_weights": {
                                    "type": "array",
                                    "items": {
                                        "type": "integer"
                                    }
                                },
                                "_totalWeight": {
                                    "type": "integer",
                                    "default": 0
                                },
                                "emptyWeight": {
                                    "type": "integer",
                                    "default": 1,
                                    "description": "Weight of not reacting"
                                },
                                "emojis": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "emojis": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            },
                                            "weight": {
                                                "type": "integer",
                                                "default": 1
                                            },
                                            "cooldown": {
                                                "type": "integer",
                                                "default": 0,
                                                "description": "Cooldown in seconds for the emoji to be used to react again"
                                            },
                                            "lastUsed": {
                                                "type": [
                                                    "string"
                                                ],
                                                "format": "date-time",
                                                "description": "DONT FILL. Timestamp of the last time the emoji was used"
                                            }
                                        },
                                        "required": [
                                            "emojis",
                                            "weight"
                                        ]
                                    }
                                },
                                "excludeChannels": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            },
                            "required": [
                                "emptyWeight",
                                "emojis",
                                "excludeChannels"
                            ]
                        }
                    }
                },
                "required": [
                    "botToken"
                ]
            }
        }
    },
    "required": [
        "enabled",
        "botToken",
        "channelThreadsWatcherServices",
        "aiChatServices"
    ]
}