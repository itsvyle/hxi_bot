                        "type": "string"
                    },
                    "botName": {
                        "type": "string"
                    },
                    "prompt": {
                        "type": "string"
                    },
                    "maxContextSize": {
                        "type": "integer",
                        "default": 5
                    },
                    "maxTokens": {
                        "type": "integer",
                        "default": 150
                    },
                    "temperature": {
                        "type": "number",
                        "default": 0.8
                    }
